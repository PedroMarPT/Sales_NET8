@{
}
@model IEnumerable<Sales_NET8.Web.Entities.Country>

@{
    ViewData["Title"] = "Países";
}

<h1>Países</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td>@country.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@country.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@country.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@country.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

